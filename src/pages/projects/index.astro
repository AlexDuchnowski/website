---
import type { MarkdownInstance } from "astro";

import BaseLayout from "../../layouts/BaseLayout.astro";
import Headline from "../../components/Headline.astro";

interface Frontmatter {
    href: string;
    source?: string;
    title: string;
    description: string;
    tags?: string[];
}

const projects = Object.values(
    import.meta.glob<MarkdownInstance<Frontmatter>>(
        "/src/pages/projects/*.{md,mdx}",
        { eager: true }
    )
);
---

<BaseLayout
    title="Projects"
    description="A collection of Alex Duchnowski's projects"
>
    <div class="centered">
        <div class="wrapper">
            <h1>Projects</h1>
            <ul>
                {
                    projects.map((project) => {
                        const { title, description, tags } =
                            project.frontmatter;
                        return (
                            <li>
                                <Headline
                                    href={
                                        "/website/projects/" +
                                        project?.file
                                            ?.split("\\")
                                            ?.pop()
                                            ?.split("/")
                                            ?.pop()
                                            ?.replace(/\.mdx?$/, "")
                                    }
                                    source="internal"
                                    title={title}
                                    description={description}
                                    tags={tags}
                                />
                            </li>
                        );
                    })
                }
            </ul>
        </div>
    </div>
</BaseLayout>
