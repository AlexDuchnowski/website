---
interface Props {
    href?: string;
    source?: string;
    title?: string;
    description?: string;
    tags?: string[];
}

const {
    href = "/",
    source = "internal",
    title = "",
    description = "",
    tags = [],
}: Props = Astro.props;
---

<style lang="scss">
    article {
        padding-top: 4px;
        padding-block-start: 4px;
        padding-bottom: 8px;
        padding-block-end: 8px;
    }
    p {
        margin-top: 0px;
        margin-bottom: 2px;
    }
    .tags {
        list-style: none;
        padding-top: 2px;
        padding-block-start: 2px;
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }
    .tag {
        color: $color_bg;
        background-color: $color_text;
        padding: 3px 6px;
        padding-block: 3px;
        padding-inline: 6px;
        white-space: nowrap;
    }
</style>

<article>
    <h3><a class={source} {href}>{title}</a></h3>
    <p>{description}</p>
    {
        tags.length > 0 && (
            <ul class="tags">
                {tags.map((tag) => (
                    <li class="tag">{tag}</li>
                ))}
            </ul>
        )
    }
</article>
